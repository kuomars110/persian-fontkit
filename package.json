{
  "name": "persian-fontkit",
  "version": "1.0.2",
  "description": "Automatic Persian (Farsi) web font optimizer for Next.js and React with smart caching, subsetting, preloading, and SSR support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "persian-fontkit": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/next-plugin.js",
      "require": "./dist/next-plugin.js",
      "types": "./dist/next-plugin.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/usePersianFont.js",
      "require": "./dist/hooks/usePersianFont.js",
      "types": "./dist/hooks/usePersianFont.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "persian",
    "farsi",
    "font",
    "optimization",
    "nextjs",
    "react",
    "subset",
    "webfont",
    "iran",
    "vazir",
    "performance",
    "core-web-vitals"
  ],
  "author": "Kioumars Rahimi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuomars110/persian-fontkit.git"
  },
  "bugs": {
    "url": "https://github.com/kuomars110/persian-fontkit/issues"
  },
  "homepage": "https://github.com/kuomars110/persian-fontkit#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "subset-font": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.19",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
